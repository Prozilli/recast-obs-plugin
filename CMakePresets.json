{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 28,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "windows-x64",
			"displayName": "Windows x64 Release",
			"description": "Build for Windows 64-bit with Visual Studio",
			"generator": "Visual Studio 17 2022",
			"architecture": "x64",
			"binaryDir": "${sourceDir}/build_windows",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_PREFIX_PATH": "$env{OBS_BUILD_DIR};$env{Qt6_DIR}"
			}
		},
		{
			"name": "linux-x64",
			"displayName": "Linux x64 Release",
			"description": "Build for Linux 64-bit",
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build_linux",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "macos-universal",
			"displayName": "macOS Universal Release",
			"description": "Build for macOS (arm64 + x86_64)",
			"generator": "Xcode",
			"binaryDir": "${sourceDir}/build_macos",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_OSX_ARCHITECTURES": "arm64;x86_64"
			}
		}
	],
	"buildPresets": [
		{
			"name": "windows-x64",
			"configurePreset": "windows-x64",
			"configuration": "Release"
		},
		{
			"name": "linux-x64",
			"configurePreset": "linux-x64"
		},
		{
			"name": "macos-universal",
			"configurePreset": "macos-universal",
			"configuration": "Release"
		}
	]
}
